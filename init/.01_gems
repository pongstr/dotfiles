#!/usr/bin/env bash

# Update Gem System
gem update --system

# Install Gems Tools
# ----------------------------------------------------------------------

function installgem () {
  if ! gem spec "${@}" > /dev/null 2>&1; then
    echo "Installing ${@}..."
    gem install "${@}"
  else
    echo "${@} is already installed"
  fi
}

installgem rb-gsl
installgem bundler
installgem github-pages
installgem compass
installgem foundation
installgem bootstrap-sass
