#!/usr/bin/env bash

function cask() {
  if brew cask info "${@}" | grep "Not installed" > /dev/null; then
    brew cask install "${@}"
  else
    echo "${@} is already installed."
  fi
}

cask appcleaner
cask atom
cask dropbox
cask firefox
cask github
cask google-chrome
cask google-chrome-canary
cask kaleidoscope
cask mamp
cask skype
cask vlc
cask virtualbox

echo ""
echo "Cleaning up installation files..."
brew cask cleanup
