#!/usr/bin/sh

# ---------------------------------------------------------------------------
# Custom Everything:
#   - Finder: Sidebar List
#   - Desktop
#   - Dock
#   - Launchpad
# ---------------------------------------------------------------------------

DOTFILES="$HOME/.dotfiles"
GIT_AUTHOR_NAME="Pongstr"
GIT_AUTHOR_EMAIL="twiz.tickler@gmail.com"

# OSX Preferences
# ---------------------------------------------------------------------------

# Set computer name (as done via System Preferences â†’ Sharing)
sudo scutil --set ComputerName  "$GIT_AUTHOR_NAME"
sudo scutil --set HostName      "$GIT_AUTHOR_NAME"
sudo scutil --set LocalHostName "$GIT_AUTHOR_NAME"
sudo defaults write /Library/Preferences/SystemConfiguration/com.apple.smb.server NetBIOSName -string "$GIT_AUTHOR_NAME"

cp -f $DOTFILES/osx/finder/com.apple.dock.plist $HOME/Library/Preferences/
cp -f $DOTFILES/osx/finder/com.apple.sidebarlists.plist $HOME/Library/Preferences/

# Git credentials
# ---------------------------------------------------------------------------

GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"

git config --global user.name "$GIT_AUTHOR_NAME"
git config --global user.email "$GIT_AUTHOR_EMAIL"
