#!/bin/bash

# List Packages that will be installed
node_modules=(
  node-gyp
  bower
  coffee-script
  express
  grunt-cli
  gulp
  jshint
  karma-cli
  less
  strongloop
  mean-cli
  nodemon
  pm2
  shelljs
)

# Install Node Packages
printf "\e[0;34m  --> Installing npm global modules for node $(nodenv global) \n\n\e[0m"
npm install -g  ${node_modules[@]}
