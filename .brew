#!/bin/bash

taps=(
  "homebrew/dupes"
  "homebrew/services"
  "homebrew/versions"
)

packages=(
  "dnsmasq"
  "gnupg"
  "gpg-agent"
  "mongodb"
  "nginx --with-http2 --with-gunzip"
  "redis"
  "curl --with-openssl"
  "git"
  "heroku-toolbelt"
  "libyaml"
  "nodenv"
  "openssl"
  "pinentry-mac"
  "python"
  "rbenv"
  "vim --with-override-system-vi"
  "wget"
  "zsh"
)

brew update
brew upgrade

for tap in "${taps[@]}"
do
  echo ""
  printf "\e[1;32m\nInstalling \e[1;34m$tap\e[0m\n"
  brew tap $tap
done

for package in "${packages[@]}"
do
  printf "\e[1;32m\nInstalling \e[1;34m$package\e[0m\n"
  echo ""
  brew install $package
done

exit 0
