--- !dotfiles:config

dnsmasq:
  meta:
    file: 'dnsmasq.conf'
    dirs: []
  context:
    host: '127.0.0.1'
    ext: 'test'

nginx:
  meta:
    path: 'nginx'
    file: 'nginx.conf'
    dirs:
      - 'cache'
      - 'logs'
      - 'pid'
      - 'sites'
      - 'ssl'
      - 'temp'
      - 'www'

  context:
    host:     'localhost'
    port:     80
    sites:    '/opt/pongstr/config/nginx/sites'
    root:     '/opt/pongstr/config/nginx/www'
    logs:     '/opt/pongstr/config/nginx/logs'

mongodb:
  meta:
    file: 'mongod.conf'
    dirs:
      - 'databases'
      - 'log'
  context:
    port:   37017
    host:   '127.0.0.1'
    logs:   '/opt/pongstr/config/mongodb/log/mongo.log'
    dbPath: '/opt/pongstr/config/mongodb/databases'

mysql:
  host: '127.0.0.1'
  port: 33061
  config_dir: 'config/mysql'

redis:
  meta:
    file: 'redis.conf'
    dirs: []
  context:
    host: '127.0.0.1'
    port: 16379
